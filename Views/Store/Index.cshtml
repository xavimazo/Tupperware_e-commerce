@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Data.Stock>
<div id="index-banner" class="parallax-container">
    <div class="section no-pad-bot">
        <div class="container">
            <div class="section">
                <div class="col s12">
                    <div class="card  horizontal">
                        <div class="card-stacked">
                            <div class="card-content">
                                <span class="card-title">
                                    Filtrar por:
                                </span>
                                <div class="row">
                                    <div class="col s2">
                                        <span class="card-title2">
                                            Soluciones para:
                                        </span>
                                        <form action="#">
                                            <p>
                                                <input type="checkbox" id="test1" />
                                                <label for="test1">Transportar</label>
                                            </p>
                                            <p>
                                                <input type="checkbox" id="test2" />
                                                <label for="test2">Servir</label>
                                            </p>
                                            <p>
                                                <input type="checkbox" id="test3" />
                                                <label for="test3">Cocinar</label>
                                            </p>
                                            <p>
                                                <input type="checkbox" id="test4" />
                                                <label for="test4">Conservar</label>
                                            </p>
                                        </form>
                                    </div>
                                    <div class="col s2">
                                        <span class="card-title2">
                                            &nbsp;
                                        </span>
                                        <form action="#">
                                            <p>
                                                <input type="checkbox" id="test5" />
                                                <label for="test5">Botellas</label>
                                            </p>
                                            <p>
                                                <input type="checkbox" id="test6" />
                                                <label for="test6">Microondas</label>
                                            </p>
                                            <p>
                                                <input type="checkbox" id="test7" />
                                                <label for="test7">Linea Niños</label>
                                            </p>
                                            <p>
                                                <input type="checkbox" id="test8" />
                                                <label for="test8">Cuchilleria</label>
                                            </p>
                                        </form>
                                    </div>
                                    <div class="col s2">
                                        <span class="card-title2">
                                            Capacidad:
                                        </span>
                                        <form action="#">
                                            <p>
                                                <input type="checkbox" id="test9" />
                                                <label for="test9">menos de 500ml</label>
                                            </p>
                                            <p>
                                                <input type="checkbox" id="test10" />
                                                <label for="test10">Entre 500ml y 1Ltr</label>
                                            </p>
                                            <p>
                                                <input type="checkbox" id="test11" />
                                                <label for="test11">Entre 1Ltr y 3Ltrs</label>
                                            </p>
                                            <p>
                                                <input type="checkbox" id="test12" />
                                                <label for="test12">Más de 3Ltrs</label>
                                            </p>
                                        </form>
                                    </div>
                                    <div class="col s2">
                                        <span class="card-title2">
                                            Precio:
                                        </span>
                                        <form action="#">
                                            <p>
                                                <input name="group1" type="radio" id="test13" />
                                                <label for="test13">Menor a mayor</label>
                                            </p>
                                            <p>
                                                <input name="group1" type="radio" id="test14" />
                                                <label for="test14">Mayor a menor</label>
                                            </p>
                                        </form>
                                        <select class="icons">
                                            <option value="" disabled selected>Todas las lineas</option>
                                            <option value="" data-icon="images/sample-1.jpg" class="left circle">Alegra</option>
                                            <option value="" data-icon="images/office.jpg" class="left circle">Actuaite</option>
                                            <option value="" data-icon="images/yuna.jpg" class="left circle">Basic Line</option>
                                        </select>
                                        <label>Linea</label>
                                    </div>
                                    <div class="col s2">
                                        <span class="card-title2">
                                            Color:
                                        </span>
                                        <form action="#">
                                            <p>
                                                <input type="checkbox" id="test15" />
                                                <label for="test15">Amarillo</label>
                                            </p>
                                            <p>
                                                <input type="checkbox" id="test16" />
                                                <label for="test16">Naranja</label>
                                            </p>
                                            <p>
                                                <input type="checkbox" id="test17" />
                                                <label for="test17">Rojo</label>
                                            </p>
                                            <p>
                                                <input type="checkbox" id="test18" />
                                                <label for="test18">Rosa</label>
                                            </p>
                                        </form>
                                    </div>
                                    <div class="col s2">
                                        <span class="card-title2">
                                            &nbsp;
                                        </span>
                                        <form action="#">
                                            <p>
                                                <input type="checkbox" id="test19" />
                                                <label for="test19">Verde</label>
                                            </p>
                                            <p>
                                                <input type="checkbox" id="test20" />
                                                <label for="test20">Violeta</label>
                                            </p>
                                            <p>
                                                <input type="checkbox" id="test21" />
                                                <label for="test21">Turquesa</label>
                                            </p>
                                            <p>
                                                <input type="checkbox" id="test22" />
                                                <label for="test22">Azul</label>
                                            </p>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>                   
                </div>
            </div>
        </div>
    </div>
    <div class="parallax"><img src="~/Content/SpecialFeatures_Background1.png" alt="Unsplashed background img 1" style="transform: translate3d(-50%, 404.594px, 0px); opacity: 1;"></div>
</div>
<div class="container">
    <div class="section">
        <div class="row">
            @foreach (var stock in Model)
            {
                <div class="col s2">
                    <div class="card">
                        <div class="card-image waves-effect waves-block waves-light">
                            <img class="activator" src="~/Content/ProductsImages/@stock.Image">
                        </div>
                        <div class="card-content">
                            <span class="card-title-store activator grey-text text-darken-4">@stock.Product.Name<i class="material-icons right">more_vert</i></span>
                            <p><a href="/Store/@stock.Id">Comprar</a></p>
                        </div>
                        <div class="card-reveal">
                            <span class="card-title grey-text text-darken-4"><i class="material-icons right">close</i>@stock.Product.Name</span>
                            <p></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            $('select').material_select();
        });
    </script>
}


