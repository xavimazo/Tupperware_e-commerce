@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div class="container">
    <div class="row">
        <form class="col s12">
            <br />
            <div class="row">
                <form action="#">
                    <div class="file-field input-field">
                        <div class="btn">
                            <span>File</span>
                            <input type="file">
                        </div>
                        <div class="file-path-wrapper">
                            <input class="file-path validate" type="text" placeholder="Imagen del producto">
                        </div>
                    </div>
                </form>
                <div class="input-field col s12">
                    <select>
                        <option value="" disabled selected>Producto y capacidad</option>
                        <option value="1">Creativa</option>
                    </select>
                </div>
                <div class="input-field col s6">
                    <select>
                        <option value="" disabled selected>Linea</option>
                        <option value="1">Creativa</option>
                    </select>
                </div>
                <div class="input-field col s6">
                    <select>
                        <option value="" disabled selected>Funcion</option>
                        <option value="1">Para preparar</option>
                    </select>
                </div>
                <div class="input-field col s3">
                    <input id="Color" type="text" class="validate">
                    <label for="last_name">Color</label>
                </div>
                <div class="input-field col s3">
                    <input id="Medidas" type="text" class="validate">
                    <label for="last_name">Medidas</label>
                </div>
                <div class="input-field col s3">
                    <input id="Estado" type="text" class="validate">
                    <label for="last_name">Estado</label>
                </div>
                <div class="input-field col s3">
                    <input id="Stock" type="number" class="validate">
                    <label for="last_name">Stock</label>
                </div>
                <div class="input-field col s3">
                    <a class="waves-effect waves-light btn col s6"><i class="material-icons left">save</i>Guardar producto</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            $('select').material_select();
        });
    </script>
}

